# =============================================================================
# OpenTelemetry Configuration
# =============================================================================

# Enable/disable OpenTelemetry
OTEL_ENABLED=true

# Service identification
OTEL_SERVICE_NAME=scrapeapi
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development
OTEL_SERVICE_NAMESPACE=scraping

# Exporter configuration
# Options: console, otlp, jaeger
OTEL_EXPORTER_TYPE=console

# OTLP Exporter (when OTEL_EXPORTER_TYPE=otlp)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Jaeger Exporter (when OTEL_EXPORTER_TYPE=jaeger)  
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Metrics configuration
OTEL_METRIC_EXPORT_INTERVAL=10000

# FastAPI instrumentation settings
OTEL_EXCLUDED_URLS=/health,/docs,/redoc

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# Environment variables used by scrapegraph-ai library
# These are automatically picked up when configuring LLM providers in graph_config["llm"]
# You can also pass API keys directly in requests, but env vars are cleaner for deployment

# OpenAI (gpt-3.5-turbo, gpt-4, gpt-4o-mini, etc.)
# OPENAI_API_KEY=sk-...

# Anthropic Claude models (claude-3-haiku, claude-3-sonnet, etc.)
# ANTHROPIC_API_KEY=...

# Mistral AI models
# MISTRAL_API_KEY=...

# Google Gemini (gemini-pro, etc.)
# GOOGLE_API_KEY=...

# Ollama (local models - llama3, nomic-embed-text, etc.)
# OLLAMA_BASE_URL=http://ollama:11434

# Additional providers supported by scrapegraph-ai:
# GROQ_API_KEY=...          # Groq models (gemma-7b-it, etc.)
# HUGGINGFACE_HUB_TOKEN=... # HuggingFace Hub models
# AZURE_OPENAI_ENDPOINT=... # Azure OpenAI (requires additional config)
# AZURE_OPENAI_API_KEY=...

# =============================================================================
# Production Example Configuration
# =============================================================================

# For production deployment with OTLP collector:
# OTEL_ENABLED=true
# OTEL_SERVICE_NAME=scrapeapi
# OTEL_ENVIRONMENT=production
# OTEL_EXPORTER_TYPE=otlp
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-collector-endpoint:4317
# OTEL_METRIC_EXPORT_INTERVAL=30000